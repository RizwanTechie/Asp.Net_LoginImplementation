@page
@model Asp.Net_Login_Implementation.Pages.LoginModel
@using Asp.Net_Login_Implementation.Pages  

@{  
    ViewData["Title"] = "Login";  
}  

<h2>Login</h2>  

<form method="post">  
    <div class="form-group">  
        <label asp-for="_ViewModelUser.UserName" class="control-label"></label>
        <input asp-for="_ViewModelUser.UserName" class="form-control" />
        <span asp-validation-for="_ViewModelUser.UserName" class="text-danger"></span>
    </div>  

    <div class="form-group">  
        <label asp-for="_ViewModelUser.Password" class="control-label"></label>
        <input asp-for="_ViewModelUser.Password" class="form-control" />
        <span asp-validation-for="_ViewModelUser.Password" class="text-danger"></span>
    </div>  

    <button type="submit" class="btn btn-primary">Login</button>  

   @*  <p style="color:red"> @Model.ErrorMessage</p> *@  
</form>  

@section Scripts {  
    @{  
        await Html.RenderPartialAsync("_ValidationScriptsPartial");  
    }  
}